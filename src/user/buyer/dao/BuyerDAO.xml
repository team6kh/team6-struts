<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="Buyer">

	<typeAlias alias="BuyerDTO" type="user.buyer.dto.BuyerDTO" />

	<!-- 구매자 리절트 맵 정의 -->
	<resultMap id="BuyerResult" class="BuyerDTO">
		<result property="buyer_id" column="buyer_id" />
		<result property="buyer_pw" column="buyer_pw" />
		<result property="buyer_name" column="buyer_name" />
		<result property="buyer_reg_date" column="buyer_reg_date" />
		<result property="buyer_email" column="buyer_email" />
		<result property="buyer_phonenumber" column="buyer_phonenumber" />
		<result property="buyer_gender" column="buyer_gender" />
	</resultMap>

	<!-- 공통으로 사용할 select 절 정의 -->
	<sql id="select-all">
		SELECT * FROM TEST_USER_TABLE
	</sql>
	
	<!-- 공통으로 사용할 where-user_id 절 정의 -->
	<sql id="where-user_id">
		WHERE user_id = #userId#
	</sql>

	<!-- select 쿼리문 정의 -->
	<select id="selectAll" resultMap="UserResult" parameterClass="UserDTO">
		<include refid="select-all" />
		ORDER BY user_name DESC
	</select>
	
	<select id="selectOne" resultMap="UserResult" parameterClass="UserDTO">
		<include refid="select-all" />
		<include refid="where-user_id" />
	</select>

	<select id="selectPassword" resultMap="UserResult">
		<include refid="select-all" />
		<include refid="where-user_id" />
		AND password = #password#
	</select>

	<!-- insert 쿼리문 정의 -->
	<insert id="insertBoard" parameterClass="UserDTO">
		INSERT INTO TEST_USER_TABLE (user_id,
									password,
									user_name,
									reg_date,
									user_level
									)
						VALUES (#userId#,
								#password#,
								#userName#,
								sysdate,
								#userLevel#
								)
	</insert>

	<!-- update 쿼리문 정의 -->
	<update id="updateBoard" parameterClass="UserDTO">
		UPDATE TEST_USER_TABLE SET password = #password#,
									user_name = #userName#,
									user_level = #userLevel#
									<include refid="where-user_id" />
	</update>

	<!-- delete 쿼리문 정의 -->
	<delete id="deleteBoard" parameterClass="UserDTO">
		DELETE FROM TEST_USER_TABLE
		<include refid="where-user_id" />
	</delete>

</sqlMap>